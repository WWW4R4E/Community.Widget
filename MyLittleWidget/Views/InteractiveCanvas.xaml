<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="MyLittleWidget.Views.InteractiveCanvas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Canvas
            x:Name="PreviewBorder"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="Transparent"
            PointerMoved="PreviewCanvas_PointerMoved"
            PointerPressed="PreviewCanvas_PointerPressed"
            PointerReleased="PreviewCanvas_PointerReleased">
            <Rectangle
                x:Name="SelectionBox"
                Stroke="Cyan"
                StrokeDashArray="4 2"
                StrokeThickness="2"
                Visibility="Collapsed" />
            <!--<Grid x:Name="SelectionCrosshair" Visibility="Collapsed">
                <Line x:Name="VLine" Stroke="Cyan" StrokeThickness="1" StrokeDashArray="2 2" />
                <Line x:Name="HLine" Stroke="Cyan" StrokeThickness="1" StrokeDashArray="2 2" />
            </Grid>-->
        </Canvas>
    </Grid>
</UserControl>
