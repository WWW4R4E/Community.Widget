<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="MyLittleWidget.Views.Pages.PreviewWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MyLittleWidget.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Canvas
            x:Name="PreviewBorder"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="AliceBlue"
            PointerMoved="PreviewCanvas_PointerMoved"
            PointerPressed="PreviewCanvas_PointerPressed"
            PointerReleased="PreviewCanvas_PointerReleased" />
    </Grid>
</Page>
